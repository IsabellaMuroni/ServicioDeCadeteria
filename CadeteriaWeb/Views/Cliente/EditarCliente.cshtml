@model CadeteriaWeb.ViewModels.Cliente.EditarClienteViewModel;

<h2>Editar Cliente</h2>

<div class="container">
    
    <div class="row justify-content-md-center">

        <div class="col-8">

            <form class="row g-3" method = "post">

                <div class="col-md-6">
                    <label for = "inputName" class = "form-label" asp-for = "@Model.Nombre">Nombre</label>
                    <input type = "text" class = "form-control" id = "inputEmail4" asp-for = "@Model.Nombre">
                    <span asp-validation-for = "Nombre" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label for="inputAddress" class="form-label" asp-for="@Model.Direccion">Dirección</label>
                    <input type="text" class="form-control" id="inputAddress" asp-for="@Model.Direccion">
                </div>
                <div class="col-md-6">
                    <label for="inputTelefono" class="form-label" asp-for="@Model.Telefono">Teléfono</label>
                    <input type="number" class="form-control" id="inputPassword4" asp-for="@Model.Telefono">
                </div>
                <div class="mb-6">
                    <label for="exampleFormControlTextarea1" class="form-label" asp-for="@Model.DatosReferenciaDireccion">Observaciones</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" asp-for="@Model.DatosReferenciaDireccion" rows="3"></textarea>
                </div>
            
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">

                    <button class="btn-confirm" type="submit">Guardar</button>
                    <a asp-action = "Cliente" class="btn-cancel">Cancelar</a>
           
                </div>
            </form>
        </div>

        <div class="col-4">
            <img src="~/images/foto1.jpg" class="img" alt="My image" width="50%" />
        </div>

    </div>

</div>
